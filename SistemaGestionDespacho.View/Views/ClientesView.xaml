<UserControl x:Class="SistemaGestionDespacho.View.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistemaGestionDespacho.View.Views"
             mc:Ignorable="d"
             d:DesignWidth="1200" d:DesignHeight="700"
             Background="Transparent">

    <UserControl.Resources>
        <!-- ================== TARJETA ================== -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <!-- ================== LABEL ================== -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <!-- ================== TEXTBOX (MODERNO) ================== -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="White" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- ================== BOTÓN (MODERNO) ================== -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="border" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- ================== DATAGRID ================== -->
        <Style x:Key="CustomDataGrid" TargetType="DataGrid">
            <Setter Property="RowHeight" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#D4A657"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CenteredTextBlock" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Estilo para centrar el CheckBox en la columna "Activo" del DataGrid -->
        <Style x:Key="DataGridCheckBoxElementStyle" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </UserControl.Resources>
    
    <!-- ================== CONTENIDO ================== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><!-- Formulario + Botones -->
            <RowDefinition Height="*"/><!-- Filtros + DataGrid -->
        </Grid.RowDefinitions>
        
        <!-- ============================================================ FORMULARIO + BOTONES ============================================================ -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/><!-- Formulario -->
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="140"/><!-- Botones -->
                </Grid.ColumnDefinitions>
                
                <!-- FORMULARIO EN 2 COLUMNAS -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Datos del cliente" FontWeight="Bold" FontSize="14" 
                               Foreground="#D4A657" Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Columna Izquierda -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,6">
                            <TextBlock Text="Nombre" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding Nombre}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,6">
                            <TextBlock Text="DNI / CIF" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding DNI_CIF}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,0,6">
                            <TextBlock Text="Email" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding Email}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Activo}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Cliente Activo" VerticalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                        
                        <!-- Columna Derecha -->
                        <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,6">
                            <TextBlock Text="Apellidos" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding Apellidos}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,0,0,6">
                            <TextBlock Text="Teléfono" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding Telefono}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Grid.Row="2" Margin="0,0,0,6">
                            <TextBlock Text="Dirección" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding Direccion}"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding MensajeError}" 
                                   Foreground="#DC2626" FontSize="11" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
                
                <!-- BOTONES CRUD -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <Button Content="✚ Crear" Background="#10B981" Style="{StaticResource ActionButton}" 
                            Command="{Binding CrearCommand}"/>
                    <Button Content="✎ Editar" Background="#2563EB" Style="{StaticResource ActionButton}" 
                            Command="{Binding EditarCommand}"/>
                    <Button Content="🗑 Eliminar" Background="#DC2626" Style="{StaticResource ActionButton}" 
                            Command="{Binding EliminarCommand}"/>
                    <Button Content="↻ Limpiar" Background="#6B7280" Style="{StaticResource ActionButton}" 
                            Command="{Binding LimpiarCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- ============================================================ FILTROS + DATAGRID ============================================================ -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/><!-- Título -->
                    <RowDefinition Height="Auto"/><!-- Filtros -->
                    <RowDefinition Height="*"/><!-- DataGrid -->
                </Grid.RowDefinitions>

                <!-- TÍTULO -->
                <TextBlock Grid.Row="0" Text="Lista de Clientes" FontWeight="Bold" 
                           FontSize="14" Foreground="#D4A657" Margin="0,0,0,8"/>
                
                <!-- FILTROS -->
                <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="6" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/><!-- Spacer -->
                            <ColumnDefinition Width="Auto"/><!-- Button -->
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="Nombre" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Width="180" Text="{Binding FiltroNombre, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="0,0,16,0">
                            <TextBlock Text="DNI / CIF" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource InputTextBox}" Width="140" Text="{Binding FiltroDNI, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,16,0">
                            <CheckBox IsChecked="{Binding FiltroActivos}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Solo Activos" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        </StackPanel>
                        
                        <Button Grid.Column="4" Content="🔍 Buscar" Width="110" Background="#2563EB" Style="{StaticResource ActionButton}" 
                                Command="{Binding BuscarCommand}" VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
                
                <DataGrid Grid.Row="2" 
                          Style="{StaticResource CustomDataGrid}" 
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}" 
                          RowStyle="{StaticResource DataGridRowStyle}" 
                          CellStyle="{StaticResource DataGridCellStyle}" 
                          ItemsSource="{Binding Clientes}" 
                          SelectedItem="{Binding ClienteSeleccionado}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ClienteId}" Width="50" 
                                            ElementStyle="{StaticResource CenteredTextBlock}"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" MinWidth="120"
                                            ElementStyle="{StaticResource CenteredTextBlock}"/>
                        <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="*" MinWidth="140"
                                            ElementStyle="{StaticResource CenteredTextBlock}"/>
                        <DataGridTextColumn Header="DNI/CIF" Binding="{Binding DNI_CIF}" Width="110" 
                                            ElementStyle="{StaticResource CenteredTextBlock}"/>
                        <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="110" 
                                            ElementStyle="{StaticResource CenteredTextBlock}"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" MinWidth="180"
                                            ElementStyle="{StaticResource CenteredTextBlock}"/>
                        <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="60"
                                                ElementStyle="{StaticResource DataGridCheckBoxElementStyle}"
                                                EditingElementStyle="{StaticResource DataGridCheckBoxElementStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

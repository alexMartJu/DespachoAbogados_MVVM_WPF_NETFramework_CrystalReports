<Window x:Class="SistemaGestionDespacho.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SistemaGestionDespacho.ViewModel;assembly=SistemaGestionDespacho.ViewModel"
        xmlns:vmv="clr-namespace:SistemaGestionDespacho.ViewModel.Views;assembly=SistemaGestionDespacho.ViewModel"
        xmlns:local="clr-namespace:SistemaGestionDespacho.View.Views"
        mc:Ignorable="d"
        Title="{Binding Titulo}" Height="800" Width="1280"
        MinWidth="1200" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">

    <Window.Resources>
        <!-- Estilo del menú superior -->
        <Style x:Key="TopMenuRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="14,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="TopMenu"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Padding="12,6" Background="Transparent" CornerRadius="6">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="Icon" Text="{TemplateBinding Tag}" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- DataTemplates para cargar vistas automáticamente -->
        <DataTemplate DataType="{x:Type vmv:ClientesViewModel}">
            <local:ClientesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmv:ExpedientesViewModel}">
            <local:ExpedientesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmv:ActuacionesViewModel}">
            <local:ActuacionesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmv:CitasViewModel}">
            <local:CitasView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmv:InformesViewModel}">
            <local:InformesView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <DockPanel LastChildFill="True">
            <!-- MENÚ SUPERIOR -->
            <Border DockPanel.Dock="Top" Height="60" Background="#1F2937">
                <!-- Usamos un Grid para organizar el logo a la izquierda, el menú centrado y un espacio a la derecha para balancear visualmente -->
                    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- LOGO + NOMBRE (izquierda) -->
                    <StackPanel x:Name="LogoPanel" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                        <Image Source="Images/logo.png" Width="36" Height="36" Stretch="Uniform" VerticalAlignment="Center" /> 
                        <TextBlock Text="Lexenda" Foreground="#D4A657" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0" />
                    </StackPanel>

                    <!-- MENÚ (centrado) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <RadioButton Style="{StaticResource TopMenuRadioButton}" Content="Clientes" Command="{Binding MostrarClientesCommand}" IsChecked="{Binding EsClientes}" Tag="👥"/>
                        <RadioButton Style="{StaticResource TopMenuRadioButton}" Content="Expedientes" Command="{Binding MostrarExpedientesCommand}" IsChecked="{Binding EsExpedientes}" Tag="📁"/>
                        <RadioButton Style="{StaticResource TopMenuRadioButton}" Content="Actuaciones" Command="{Binding MostrarActuacionesCommand}" IsChecked="{Binding EsActuaciones}" Tag="📝"/>
                        <RadioButton Style="{StaticResource TopMenuRadioButton}" Content="Citas" Command="{Binding MostrarCitasCommand}" IsChecked="{Binding EsCitas}" Tag="📅"/>
                        <RadioButton Style="{StaticResource TopMenuRadioButton}" Content="Informes" Command="{Binding MostrarInformesCommand}" IsChecked="{Binding EsInformes}" Tag="📊"/>
                    </StackPanel>

                    <!-- Placeholder a la derecha con el mismo ancho que el logo para centrar visualmente -->
                    <Border Grid.Column="2" Width="{Binding ActualWidth, ElementName=LogoPanel}" Background="Transparent" />
                </Grid>
            </Border>
            <!-- TÍTULO DINÁMICO -->
            <Border DockPanel.Dock="Top" Background="White" Padding="12" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <TextBlock Text="{Binding Titulo}" Foreground="#D4A657" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <!-- CONTENIDO PRINCIPAL -->
            <Border Padding="20" Background="Transparent">
                <ContentControl Content="{Binding VistaActual}"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
